<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">
  <changeSet author="hadyanyasrizal" id="1767766705015-1a">
    <sql dbms="postgresql">
      CREATE SCHEMA IF NOT EXISTS medlink;
    </sql>
  </changeSet>

  <changeSet author="hadyanyasrizal" id="1767766705015-1b">
    <createSequence incrementBy="1" schemaName="medlink" sequenceName="person_pid_seq"
      startValue="1"/>
  </changeSet>

  <changeSet author="hadyanyasrizal" id="1767766705015-2">
    <createTable schemaName="medlink" tableName="person">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_person"/>
      </column>
      <column defaultValueComputed="'P' || lpad(nextval('medlink.person_pid_seq')::text, 9, '0')"
        name="pid"
        type="VARCHAR(10)">
        <constraints nullable="false"/>
      </column>
      <column name="first_name" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="last_name" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="date_of_birth" type="DATE">
        <constraints nullable="false"/>
      </column>
      <column name="gender" type="VARCHAR(6)">
        <constraints nullable="false"/>
      </column>
      <column name="phone" type="VARCHAR(15)">
        <constraints nullable="false"/>
      </column>
      <column name="address" type="VARCHAR">
        <constraints nullable="false"/>
      </column>
      <column name="suburb" type="VARCHAR">
        <constraints nullable="false"/>
      </column>
      <column name="state" type="VARCHAR">
        <constraints nullable="false"/>
      </column>
      <column name="postcode" type="VARCHAR(4)">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="updated_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="deleted_at" type="timestamp">
        <constraints nullable="true"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="hadyanyasrizal" id="1767766705015-4">
    <addUniqueConstraint columnNames="pid" constraintName="uk_person_pid" schemaName="medlink"
      tableName="person"/>
  </changeSet>

  <changeSet author="hadyanyasrizal" id="1767766705015-5">
    <sql>
      ALTER TABLE medlink.person
      ADD CONSTRAINT ck_person_gender
      CHECK (gender IN ('MALE','FEMALE'));
    </sql>
  </changeSet>

  <changeSet author="hadyanyasrizal" id="1767766705015-6">
    <createIndex
      indexName="idx_person_first_name"
      schemaName="medlink"
      tableName="person">
      <column name="first_name"/>
    </createIndex>
    <createIndex
      indexName="idx_person_last_name"
      schemaName="medlink"
      tableName="person">
      <column name="last_name"/>
    </createIndex>
    <createIndex
      indexName="idx_person_date_of_birth"
      schemaName="medlink"
      tableName="person">
      <column name="last_name"/>
    </createIndex>
    <createIndex
      indexName="idx_person_phone"
      schemaName="medlink"
      tableName="person">
      <column name="phone"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
